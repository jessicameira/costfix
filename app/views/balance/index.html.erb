<div>
  <p style="color: green"><%= notice %></p>
  
  <% content_for :title, "Movimentação" %>
  
  <h1>Movimentação</h1>
  <%= link_to "New balance", new_balance_path %>
  <div id="balances">
    <% if @balance.empty? %>
      <p>Não há movimentações cadastradas.</p>
    <% else %>
    <div id="statement">
      <table class="p-2 table">
        <tr class="table-header-group">
          <th>Descrição</th>
          <th>Valor</th>
          <th>Tipo</th>
          <th>Data de Vencimento</th>
          <th> Ação </th>
        </tr>
      <% @balance.each do |statement| %>
        <tr>
          <td><%= statement.description %></td>
          <td><%= statement.amount %></td>
          <td><%= statement.type_balance %></td>
          <td><%= statement.date_overdue %></td>
          <td>
            <%= link_to "Show", show_balance_path(statement) %>
            <%= link_to "Edit", edit_balance_path(statement) %>
            <%= button_to "Destroy", statement, method: :delete, data: { confirm: "Are you sure?" } %>
          </td>
        </tr>
      <% end %>
    </div>
    <% end %>
  </div>
  
</div>

<div class="bg-gray-400 p-2 table">
  <div class="table-caption">Description</div>
  <div class="table-header-group">
    <div class="table-cell bg-teal-400">One Header</div>
    <div class="table-cell bg-teal-400">Two Header</div>
  </div>
  <div class="table-column-group">
    <div class="table-colum bg-teal-400">One Column</div>
    <div class="table-colum bg-teal-400">Two Column</div>
  </div>
  <div class="table-row-group">
    <div class="table-row">
      <div class="table-cell bg-teal-400">One Data</div>
      <div class="table-cell bg-teal-400">Two Data</div>
    </div>
    <div class="table-row">
      <div class="table-cell bg-teal-400">One Data</div>
      <div class="table-cell bg-teal-400">Two Data</div>
    </div>
  </div>
  <div class="table-footer-group">
    <div class="table-cell bg-teal-400">One Footer</div>
    <div class="table-cell bg-teal-400">One Footer</div>
  </div>
</div>


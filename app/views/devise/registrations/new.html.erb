<div class="signup_background_box">
  <div class="signup_image">
      <%= image_tag('tela_signup.png', class:'image_tag')%>
  </div>


    <div class="signup_form">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
      
        <div class="login_align">
        <%= image_tag('logotipo.png', class: 'login_logo')%>
        </div>

      <div class="signup_fields">
        <div class="signup_field">
          <%= f.label :email %><br>
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="signup_field">
          <%= f.label :Senha %><br>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> caracteres no m√≠nimo)</em><br>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>

        <div class="signup_field">
          <%= f.label :'confirme a senha' %><br>
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>
      </div>

      <div class="signup_buttons">

        <div class="signup_actions">
          <%= f.submit "Cadastrar" %>
        </div>

        <div>
          <%- if controller_name != 'sessions' %>
            <%= link_to "Entrar", new_session_path(resource_name), class:'signup_login_button' %>
          <% end %>
        </div>

      </div>
    </div>
  <% end %>

</div>

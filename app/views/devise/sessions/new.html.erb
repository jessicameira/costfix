<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  
  <div class="background_box">
    <div class="image"> 
      <%= image_tag('tela_login.png', class:'image_tag')%>
    </div>
    
    <div class="form"> 
        
        <div class="login_align">
        <%= image_tag('logotipo.png', class: 'login_logo')%>
        </div>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.label "senha" %><br />
        <%= f.password_field :password, autocomplete: "current-password" %>
      </div>

      <div class="login_flex">
        <% if devise_mapping.rememberable? %>
          <div>
            <%= f.check_box :remember_me %>
            <%= f.label "Manter conectado" %>
          </div>
        <% end %>

        <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
          <%= link_to "Esqueci minha senha", new_password_path(resource_name), class:'login_link' %>
        <% end %>
      </div>

      <div class="login_buttons">
        <div class="actions">
          <%= f.submit "Entrar" %>
        </div>

        <div>
          <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <%= link_to "Cadastrar", new_registration_path(resource_name), class:'signup_button' %><br />
  <% end %>
        </div>
      </div>


    </div>
  </div>
<% end %>


